{
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "importHelpers": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,

      //===
      "allowJs": true,
      // потом убрать когда будут указаны типы для vue-auth
      "noImplicitAny": false,
      //===

      "types": [
         "jest",
         "webpack-env"
      ],

      "baseUrl": ".",
      "paths": {
         "@/*": [
            "resources/js/*"
         ]
      },
      "lib": [
         "esnext",
         "dom",
         "dom.iterable",
         "scripthost"
      ]
   },
   "include": [
      "resources/js/**/*.ts",
      "resources/js/**/*.tsx",
      "resources/js/**/*.vue",
      "tests/**/*.ts",
      "tests/**/*.tsx"
   ]
}
